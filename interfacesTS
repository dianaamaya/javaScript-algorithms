  // Initial interface

  interface Person {
    name: string;
    surname: string;
    age: number;
    email: string;
  }

  //All fields are optional

  interface Person {
    name?: string;
    surname?: string;
    age?: number;
    email?: string;
  }

  //Exclude email from Person interface
  type PersonNoEmail = Omit<Person, "email">;

  const checkPerson  = (data:Person) => {
    console.log("ok")
  }

  checkPerson({email:"abc@gmail.com"}) //ok
  // checkPerson({other:"abc@gmail.com"}) //No allowed

  const checkPersonNoEmail  = (data:PersonNoEmail) => {
    console.log("ok")
  }

  checkPersonNoEmail({name:"some name"}) //ok
  //checkPersonNoEmail({email:"abc@gmail.com"}) //No allowed
  //checkPersonNoEmail({other:"abc@gmail.com"}) //No allowed
  
